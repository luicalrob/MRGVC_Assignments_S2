<launch>
    <param name="/use_sim_time" value="true" />


    <!-- start world -->
    <node name="gazebo" pkg="gazebo_ros" type="gazebo" args="$(find turtlebot_gazebo)/worlds/empty.world" respawn="false" output="screen" />

    <!-- starting the interface -->
    <node name="interface" pkg="mr_shape_formation" type="interfaz.py"/>

    <!-- include our robots -->
    <include file="$(find mr_shape_formation)/launch/robots.launch">
        <arg name="is_centralized" value="false" />
    </include>
 
</launch>