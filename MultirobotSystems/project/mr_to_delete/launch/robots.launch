<launch>
    <arg name="is_centralized"/>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_waffle.urdf.xacro" />

    <!-- BEGIN ROBOT 1-->
    <group>
        <arg name="robot_number" value="1" />
        <group ns="robot$(arg robot_number)">
            
            <param name="tf_prefix" value="robot$(arg robot_number)_tf" />
            <include file="$(find mr_shape_formation)/launch/one_robot.launch" >
                <arg name="robot_name" value="robot$(arg robot_number)_tf" />
                <arg name="pose_x" value="5" />
                <arg name="pose_y" value="2" />
                <arg name="pose_z" value="0" />
                <arg name="pose_R" value="0" />
                <arg name="pose_P" value="0" />
                <arg name="pose_Y" value="0" />
            </include>
            
            <node pkg="mr_shape_formation" name="move_robot$(arg robot_number)" type="centralized_movement.py" args="$(arg robot_number)" if="$(arg is_centralized)" />
            <node pkg="mr_shape_formation" name="move_robot$(arg robot_number)" type="decentralized_movement.py" args="$(arg robot_number)" unless="$(arg is_centralized)" />

